# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'GoogleBooksApp' do

  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # A pod for JSON Mapping
  pod 'Gloss'

  # A pod for release management
  pod 'Fabric'

  # A pod for crash reports management
  pod 'Crashlytics'

  # A custom pod developed by myself (https://github.com/sag333ar/SKRequestManager)
  pod 'SKRequestManager'

  # A pod for async image caching management
  pod 'SDWebImage'

  # A pod for showing progress hud
  pod 'MBProgressHUD'

  # A pod for showing snackbar message
  pod 'TTGSnackbar'
  # Pods for GoogleBooksApp

end
